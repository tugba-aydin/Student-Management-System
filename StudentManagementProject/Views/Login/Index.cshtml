@{
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementProject.styles.css" asp-append-version="true" />
</head>
<body class="container-fluid h-100">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 mt-5">
            <main class="form-signin text-center">
                <form method="post" asp-controller="Login" asp-action="Login">
                    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                    <div class="form-floating col-md-6 offset-md-3">
                        <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating col-md-6 offset-md-3 mt-2">
                        <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div class="col-md-6 offset-md-3 mt-2">
                    <input class="w-100 btn btn-lg btn-primary" type="submit" value="Sign In">
                        </div>
                </form>
            </main>
        </div>
    </div>
    <div data-flash-app-container="true" id="flash_player_app_root"></div>
</body>
</html>