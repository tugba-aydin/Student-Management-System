@model StudentManagementProject.Models.StudentCourseViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h3 class="text-center mb-4 mt-4">Course You Take</h3>
<div class="row align-items-center justify-content-center">
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Course Id</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Course)
                {
                    var findData = Model.StudentCourse.Find(x => x.CourseId == item.Id);
                    @if (findData==null)
                    {
                        continue;    
                    }
                    <tr>
                        <th scope="row"></th>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-danger" href="/StudentCourse/Delete/@findData.StudentId?studentCourseId=@findData.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<h3 class="text-center mb-4 mt-4">Course You Take</h3>
<div class="row align-items-center justify-content-center">
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Course Id</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Course)
                {
                    var findData = Model.StudentCourse.Find(x => x.CourseId == item.Id);
                    @if (findData != null)
                    {
                        continue;
                    }
                    <tr>
                        <th scope="row"></th>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-primary" href="/StudentCourse/Add/@Model.StudentId?CourseId=@item.Id">Add</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>